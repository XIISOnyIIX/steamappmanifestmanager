{
  "name": "steam-manifest-scanner",
  "version": "1.0.2",
  "description": "Scan Steam games and generate Lua manifest scripts",
  "author": "Steam Manifest Scanner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/styles.css --watch",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "electron",
    "steam",
    "manifest",
    "scanner"
  ],
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-fetch": "^3.3.0",
    "vdf-parser": "^1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.steammanifestscanner.app",
    "productName": "Steam Manifest Scanner",
    "icon": "build/icon.png",
    "publish": {
      "provider": "github",
      "owner": "XIISOnyIIX",
      "repo": "steamappmanifestmanager"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "steam-scanner.js",
      "index.html",
      "styles.css",
      "components/**/*",
      "dist/styles.css",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/README*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "artifactName": "Steam-Manifest-Scanner-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "Steam-Manifest-Scanner-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
